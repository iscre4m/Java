<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <display-name>Web Application</display-name>

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>step.learning.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>step.learning.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>Charset</filter-name>
        <filter-class>step.learning.filters.CharsetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Charset</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>Data</filter-name>
        <filter-class>step.learning.filters.DataFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Data</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>Demo</filter-name>
        <filter-class>step.learning.filters.DemoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Demo</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>